{
	"name": "RPG Maker Plugin Header Parser",
	"author": "Maybee Rezbit (SomeRanDev)",
	"version": "1.0.0",
	"exports": "./Main.ts",
	"tasks": {
		// Runs the program expected an argument for the input plugin file.
		"start": "deno run --allow-read --allow-write Main.ts",
		"test": "deno test tests/*",
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 80,
		"indentWidth": 4,
		"semiColons": true,
		"singleQuote": false,
	},
	"lint": {
		"rules": {
			"exclude": ["no-import-prefix"],
		},
	},
}
